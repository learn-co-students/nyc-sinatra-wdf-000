<h2>Edit Landmark - <%=@landmark.name%></h2>

<form method = "POST" action = "/landmarks/<%=@landmark.id%>">
  <input id = "hidden" type = "hidden" name="_method" value = "PATCH">

  <p>Landmark name: <input type = "text" name = "landmark[name]" id="name" value = "<%=@landmark.name%>"></p>
  <p>Completion year: <input type = "text" name ="landmark[year_completed]" id="year_completed" value = "<%=@landmark.year_completed%>"></p>
  <p><input type = "submit" value="Edit Landmark"></p>
</form>


