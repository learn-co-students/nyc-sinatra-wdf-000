<h1>Create a New Figure</h1>
<form method="post" action="/figures">
  <label>Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name">

  <label>Title Name: Choose an Existing Title:</label>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>"><%= title.name %>
  <% end %>

  <br></br>

  <label>Or Create a New Title</label>
  <label>Name:</label>
  <input type="text" name="title[name]" id="new_title">

  <label>Landmark Name: Choose an Existing Landmark:</label>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>"><%= landmark.name %>
  <% end %>

  <br></br>
  
  <label>Or Create a New Landmark</label>
  <label>Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label>Year Completed:</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed">

  <input type="submit" value="Create New Figure">

</form>