<h1>Create Figure</h1>
<form action="/figures" method="POST" >
  <h3>Figure Name: <input type="text" id="figure_name" name="figure[name]"></h3>
  <h2>Titles</h2>
  <% Title.all.each do |x| %>
  <input type="checkbox" id="title_<%=x.id%>" name="figure[title_ids][]" value="<%=x.id%>"> <%= x.name %> </input>
  <% end %>
  <h2>Landmarks</h2>
  <% Landmark.all.each do |x| %>
    <input type="checkbox" id="landmark_<%=x.id%>" name="figure[landmark_ids][]" value="<%=x.id%>"> <%= x.name %> </input>
  <% end %>
  <h2>Or Create..</h2>
  <h3>Landmark Name: <input type="text" id="new_landmark" name="landmark[name]" ></h3>
  <h3>Title Name: <input type="text" id="new_title" name="title[name]"></h3>
  <h3><input type="submit" value="Create New Figure"></h3>
</form>
