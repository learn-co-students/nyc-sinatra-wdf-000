<h1>Create a new Figure here:</h1>

<form method="POST" action="/figures">

  <label><strong>Figure Name</strong></label>
  <input type="text" name="figure[name]" id="figure_name"><br><br>

 <h4>Select Title</h4>
  <%Title.all.each do |title|%>
  <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%= title.id %>"><%=title.name%><br>
  <%end%>

  <label><h4>Create new title</h4></label>
  <input type="text" name="title[name]" id="new_title"><br><br>

  <h4>Select Landmark</h4>
  <%Landmark.all.each do |landmark|%>
  <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%><br>
  <%end%>

  <label><h4>Create new landmark</h4></label>
  <label>Name</label>
  <input type="text" name="landmark[name]" id="new_landmark"><br><br>
  <label>Year</label>
  <input type="text" name="landmark[year_completed]"><br><br>

  <input type="submit" value="Create New Figure">

</form>