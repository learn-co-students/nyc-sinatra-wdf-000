<h1>Create a New Figure:</h1>

<form method="POST" action="/figures">
  <label>Name:</label> <input type="text" id="figure_name" name="figure[name]">

  <br></br>

  <label>Choose an exsisting Title:</label><br>
  <% Title.all.each do |title| %>
    <input type="checkbox" value="<%=title.id%>" id="title_<%=title.id%>" name="figure[title_ids][]"><%=title.name%>
    <br>
    <%end%>
    <br>

  <label>Choose an exisiting Landmark:</label><br>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]"><%=landmark.name%>
  <br>
    <%end%>

  <br>
  <label>Create a new Title:</label> <input type="text" id="new_title" name="title[name]">

  <br>
  <label>Create a new Landmark:</label> <input type="text" id="new_landmark" name="landmark[name]">
  <br>

  <input type="submit" value="Create New Figure" name="submit">