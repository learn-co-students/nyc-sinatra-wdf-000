<h1>Create Figure</h1>

<form action="/figures" method="post">
  <input type="text" id="figure_name" name="figure[name]">
  
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" value="<%= landmark.id %>" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>"><%= landmark.name %></input>
  <% end %>
  <input type="text" name="landmark[name]" id='new_landmark'>
  <input type="text" name="landmark[year_completed]">
  <% Title.all.each do |title| %>
    <input type="checkbox" value="<%= title.id %>" name="figure[title_ids][]" id="title_<%= title.id %>"><%= title.name %></input>
  <% end %>
  <input type="text" name="title[name]" id="new_title">
  <input type="submit" value="Create New Figure">
</form>
