<%= erb :'/layouts/_header' %>

<h1><%= @figure.name %></h1>

<hr>

<h2>Titles: </h2>
<% @figure.titles.each do |title| %>
  <ul>
    <li><%= title.name %></li>
  </ul>
<% end %>

<h2>Landmarks: </h2>
<% @figure.landmarks.each do |landmark| %>
  <ul>
    <li><%= landmark.name %></li>
  </ul>
<% end %>

<h3><a href="/figures/<%=@figure.id%>/edit">Edit Figure</a></h3>

<h3><a href="/figures">Back to Figures</a></h3>

<%= erb :'/layouts/_footer' %>
