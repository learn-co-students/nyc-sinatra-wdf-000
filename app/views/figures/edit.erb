<h1>Edit <%=@figure.name%></h1>


<form action="/figures/<%=@figure.id%>" method="POST">
  <label> Name: </label><input type="text" name="figure[name]" id="figure_name">
  <br>
  <label> Edit Titles: </label>
  <% Title.all.each do |title| %>

      <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%='checked' if @figure.titles.include?(title)%><%=title.name%></input>
      <% end %>
      <br>
  <label> Or Add New Title: </label><input type="text" name="title[name]" id="new_title"><br>
  <label> Edit Landmarks: </label> 
  <% Landmark.all.each do |landmark| %>

      <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%='checked' if @figure.landmarks.include?(landmark)%><%=landmark.name%></input>
      <% end %>
      <br>
  <label> Or Add New Landmark: </label><input type="text" name="landmark[name]" id="new_landmark">
  <br>
  <input type="submit" value="Edit Figure">

</form>