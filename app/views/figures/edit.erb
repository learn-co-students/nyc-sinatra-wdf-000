<form method="POST" action="/figures/<%=@figure.id%>">
Figure Name: <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name">

Title: 
<% Title.all.each do |title|%>
  <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%='checked' if @figure.titles.include?(title.id) %>> <%= title.name %> </input> <br>
  <% end %>

  New title: <input type="text" name="title[name]" id="new_title">
  <br>
  <br>
  <label>Landmarks:</label> 
  <br>
  <% Landmark.all.each do |landmark|%>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark.id)%>> <%= landmark.name %> </input> <br>
  <% end %>
  New landmark: <input type="text" name="landmark[name]" id="new_landmark">
<br>
<br>
<input type="hidden" name="_method" value="patch">
<button type="submit" id="Edit Figure">Edit Figure</button>

</form>
