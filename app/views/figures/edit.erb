<h2>Edit Figure</h2>
<form METHOD="post" action="/figures/<%= @figure.id %>">

<input type="hidden" name="_method" value="patch">

<br><br>
<label>Name:</label>

<input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">

<br><br>
<label>Edit Title</label><br>
<%Title.all.each do |title|%>
<label>
<input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></label><br>
<%end%>
<br>
<label>Add New Title:</label>
<input type="text" id="new_title" name="title[name]">
<br><br>



<label>Edit Landmark:</label><br>
<%Landmark.all.each do |landmark|%>
<label>
<input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></label><br>
<%end%>
<br>
<label>Add New Landmark:</label>
<label>Name:</label>
<input type="text" id="new_landmark" name="landmark[name]">
<br>
<label>Year Built:</label>
<input type="text" name="landmark[year_completed]">
<button type="submit" value="Edit Figure">Edit Figure</button>

</form>

