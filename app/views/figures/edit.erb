<h1>Edit <%= @figure.name %></h1>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <label for="figure_name">Name</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

  <label for="new_landmark">Landmark Name</label>
  <input type="text" name="landmark[name]" id="new_landmark" value="<%= @figure.landmarks.first.name %>">

  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.name %>" <%='checked' if @figure.titles.include?(title) %>>
  <% end %>

  <input type="submit" value="Edit Figure">
</form>



