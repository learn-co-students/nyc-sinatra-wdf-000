<form action='/figures/<%=@figure.id%>' method="post">
	
		<label for="figure_name">Figure Name:</label>
		<input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">
	
		<label>Title:</label>
		<% @titles.each do |title| %>
		<input id="<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"><%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input>
		<% end %>

		<label for="new_title">create a new title</label>
		<input type="text" name="title[name]" id="new_title">
		
		<label>Landmark:</label>
		<% @landmarks.each do |landmark| %>
		<input id="<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input>
		<% end %>

		<label for="new_landmark">create a new landmark</label>
		<input type="text" name="landmark[name]" id="new_landmark">

		<input type="submit" value="Edit Figure">
</form>