<h1>Edit <%= @figure.name %></h1>
<hr>
<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label>Figure Name:</label>
  <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">
  <br>

  <!-- Titles -->
  <% Title.all.each do |title| %>
    <label>
    <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title)%>>
    <%= title.name %></label><br>
  <% end %>
  <br>

  <label>New Title:</label>
  <input type="text" id="new_title" name="title[name]">
  <br><br>

  <!-- Landmarks -->
  <% Landmark.all.each do |landmark| %>
  <label>
    <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>>
    <%= landmark.name %></label><br>
  <% end %>

  <br><br>
  <label>New Landmark:</label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <br>

  <br>
  <input type="submit" value="Edit Figure">

</form>
