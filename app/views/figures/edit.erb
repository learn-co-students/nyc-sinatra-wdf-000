<h1>Edit an Existing Figure</h1>
<form method="post" action="/figures/<%= @figure.id %>">

  <label>Figure Name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">

  <label>Choose an Existing Title:</label>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.name %>" <% 'checked' if @figure.titles.include?(title.id) %>><%= title.name %>
  <% end %>

  <label>Or Create a New Title:</label>
  <label>Title Name:</label>
    <input type="text" name="title[name]" id="new_title">
  <br></br>

  <label>Choose an Existing Landmark:</label>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.name %>" <% 'checked' if @figure.landmarks.include?(landmark.id) %>><%= landmark.name %>
  <% end %>

  <label>Or Create a New Landmark:</label>
  <label>Landmark Name:</label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <input type="text" name="landmark[year_completed]" id="new_year_completed">
  <br></br>

  <input type="submit" value="Edit Figure">

</form>